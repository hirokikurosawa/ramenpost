<h1 class="title">ユーザー一覧</h1>
<div>
  <% @users.each do |user| %>
    <table class="user-table">
      <tr>
        <th class="user-table__id"><%= user.id %></th>
        <td class="user-table__icon-space">
          <%= attachment_image_tag user, :profile_image, format: 'jpg', fallback: "default.png", class: "user-table__icon" %>
        </td>
        <td class="user-table__name">
          <%= link_to admins_user_path(user) do %>
            <%= user.nickname %>
          <% end %>
        </td>
      </tr>
    </table>
  <% end %>
</div>
<div class="pagination">
  <%= paginate @users %>
</div>