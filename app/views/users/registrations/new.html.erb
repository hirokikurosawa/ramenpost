<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form">
    <h2 class="form__title">新規アカウント作成</h2>
    <%= render "users/shared/error_messages", resource: resource %>

     <div>
      <p class="form__name"><%= f.label :フルネーム %></p>
      <%= f.text_field :name, autofocus: true, class: "form__field" %>
    </div>

     <div>
      <p class="form__name"><%= f.label :ユーザーネーム（15文字以内） %></p>
      <%= f.text_field :nickname, autofocus: true, class: "form__field" %>
    </div>

    <div>
      <p class="form__name"><%= f.label :プロフィール写真 %></p>
      <%= f.attachment_field :profile_image, class: "form__field" %>
    </div>

    <div>
      <p class="form__name"><%= f.label :メールアドレス %></p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__field" %>
    </div>

    <div>
      <p class="form__name">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </p>
      <%= f.password_field :password, autocomplete: "new-password", class: "form__field" %>
    </div>

    <div>
      <p class="form__name"><%= f.label :パスワード（確認） %></p>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form__field" %>
    </div>

    <div class="form__submit">
      <%= f.submit "Sign up" %>
    </div>
  </div>
<% end %>


