<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form">
    <h2 class="form__title">ログイン</h2>
    <div>
      <p class="form__name"><%= f.label :メールアドレス %></p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__field" %>
    </div>

    <div>
      <p class="form__name"><%= f.label :パスワード %></p>
      <%= f.password_field :password, autocomplete: "current-password", class: "form__field" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form__check-box">
        <%= f.check_box :remember_me %>
        <%= f.label :パスワードを保存 %>
      </div>
    <% end %>

    <div class="form__submit">
      <%= f.submit "Log in" %>
    </div>
  </div>
<% end %>