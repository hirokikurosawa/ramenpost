<!DOCTYPE html>
<html>
  <head>
    <title>Ramenpost</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= link_to root_path do %>
        <div>ラーメンPOST</div>
      <% end %>

      <ul>
        <div>
          <% if admin_signed_in? %>
          <li>
            <%= link_to "最新投稿一覧", admins_path %>
          </li>
          <li>
            <%= link_to "ユーザ一覧", admins_user_path %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_admin_session_path %>
          </li>
          <% elsif user_signed_in? %>
          <li>
            <%= link_to "ホーム", following_posts_posts_path %>
          </li>
          <li>
            <%= link_to "最新投稿一覧", posts_path %>
          </li>
          <li>
            <%= link_to "マイページ", user_path(current_user.id) %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_user_session_path %>
          </li>
          <% else %>
          <li>
            <%= link_to "サイト案内", about_path %>
          </li>
          <li>
            <%= link_to "最新投稿一覧", posts_path %>
          </li>
          <li>
            <%= link_to "新規登録", new_user_registration_path %>
          </li>
          <li>
            <%= link_to "ログイン", new_user_session_path %>
          </li>
          <% end %>
        </div>
      </ul>
    </header>
    <%= yield %>
  </body>
</html>
